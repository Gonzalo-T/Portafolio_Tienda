@model IEnumerable<Tienda.Models.Cliente>

@{
    ViewBag.Title = "ListadoEmpleados";
    Layout = "~/Views/Shared/_LayoutLoginAdministrador.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<br />

<h2 style="color: white; text-align:center">Listado de Clientes</h2>
<div style="background-color: whitesmoke; color: darkolivegreen; width:100%;  border-radius : 1%">



    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Rut)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DigitoVerificador)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Correo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre_usuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha_nacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado_civil)
                </th>


                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Rut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DigitoVerificador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_nacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado_civil)
                </td>


                <td>
                    <a style="background-color: rgb(55 65 81); color: white; border-radius: 10% " href="ActualizarCliente?Rut=@item.Rut"> Editar</a>
                    <a style="background-color: darkred; color: white; border-radius: 10%" href="EliminarCliente?Rut=@item.Rut"> Eliminar</a>
                </td>

            </tr>
        }

    </table>

</div>

